def run_all_tests():
    """Run all DeepSeek tool calling tests"""
    print("=" * 70)
    print("ğŸ”¬ DEEPSEEK NATIVE TOOL CALLING TEST SUITE")
    print("=" * 70)
    
    # Test functions
    tests = [
        test_deepseek_configuration,
        test_handler_creation,
        test_openai_client_initialization,
        test_tool_definitions,
        test_session_management,
        test_context_loading,
        test_api_key_validation,
        test_integration_readiness
    ]
    
    # Run tests
    results = []
    for test_func in tests:
        try:
            result = test_func()
            results.append(result)
        except Exception as e:
            print(f"âŒ CRITICAL ERROR in {test_func.__name__}: {e}")
            results.append(False)
    
    # Summary
    passed = sum(results)
    total = len(results)
    
    print("\n" + "=" * 70)
    print("ğŸ“Š TEST SUMMARY")
    print("=" * 70)
    print(f"âœ… Passed: {passed}/{total} tests")
    print(f"âŒ Failed: {total - passed}/{total} tests")
    
    if passed == total:
        print("\nğŸ‰ ALL TESTS PASSED!")
        print("ğŸš€ DeepSeek native tool calling is ready for use")
        print("\nğŸ’¡ Next steps:")
        print("   1. Test actual DeepSeek API calls")
        print("   2. Verify tool execution in live environment")
        print("   3. Test complex multi-tool workflows")
    else:
        print(f"\nâš ï¸ {total - passed} tests failed - review issues above")
        print("ğŸ”§ Fix failing tests before proceeding")
    
    print("=" * 70)
    
    return passed == total

if __name__ == "__main__":
    # Set up signal handling for clean exit
    def signal_handler(sig, frame):
        print("\nğŸ›‘ Test interrupted by user")
        sys.exit(0)
    
    signal.signal(signal.SIGINT, signal_handler)
    
    # Run tests
    success = run_all_tests()
    sys.exit(0 if success else 1)
